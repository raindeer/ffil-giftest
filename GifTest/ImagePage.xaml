    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    x:Class="GifTest.ImagePage">

    <!-- An animated gif keeps the page alive (leak) -->
